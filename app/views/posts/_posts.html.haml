= hidden_field_tag :direction, params[:direction]
= hidden_field_tag :sort, params[:sort]

%table.posts
  %tr
    %th(style="width:60px;")
      / = sortable "Sort by Date"
    %th
  - for post in @posts
    %tr{onclick: "google.maps.event.trigger(markerArray[" + post.user_id.to_s + "],'click');"}
      %td= post.created_at.strftime("%m/%d/%Y")
      %td
        = post.user.name
        .post_content
          = post.content

= will_paginate @posts