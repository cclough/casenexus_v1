//delay 200ms to allow hide modal animation,
setTimeout(function(){

	// hide modal
  $("#post_modal").modal('hide');

  // update application flash html
  $("#flash_application").html("<%= escape_javascript(render :partial => 'layouts/flash' , :locals => { :flash => flash }).html_safe %>");
	
	// fade in application flash
	$("#flash_application").fadeIn("fast");

	// changes write post button to disabled!
	$('#post_button_write').addClass("disabled")

	// changes write post button to disabled!
	$('#post_button_write_text').html("Post awaiting approval")

}, 200);