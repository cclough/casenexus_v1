/ render new post form, remote AJAX enabled

= form_for(@post, remote: true) do |f|

  #flash_posts

  = render 'shared/error_messages', object: @post

  #post_form

    .field
      = f.text_area :content, placeholder: "Compose new post...", :rows => 3

    %button.btn.btn-primary.pull-right{:type => "submit"}
      %i.icon-arrow-right.icon-white
      Post