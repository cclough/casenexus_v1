/ render new message form, remote AJAX enabled

= form_for(@message, remote: true) do |f|

  #flash_messages

  = render 'shared/error_messages', object: @message

  #message_form(style="display:none;")

    .field
      = f.text_area :content, placeholder: "Send message...", style: "height:100px;", id: "message_field"
      = f.hidden_field :user_id, :value => @user.id
      = f.hidden_field :sender_id, :value => current_user.id

    %button.btn.btn-primary.btn-inverse.pull-right{:type => "submit"}
      %i.icon-arrow-right
      Send