
= content_for :content do
  .row
    .span7
      .panel
        .center.hero-unit
          %h1 Welcome to casenexus.com

    .span5
      .panel.type1
        = form_for(:session, url: sessions_path) do |f|
          = f.label :email
          = f.text_field :email
          = f.label :password
          = f.password_field :password
          = f.submit "Sign in", class: "btn btn-inverse pull-right"

      .center
        %p
          This site does things
        = link_to "Sign up now!", signup_path, class: "btn btn-large btn btn-inverse"