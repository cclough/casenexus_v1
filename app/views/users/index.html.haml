- provide(:title, 'Map')

:javascript
  $(document).ready( function() {
    load_map;
  } );

%script(type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false")

%body(onload="load_map();")

%h1 Map 

.row
  %aside.span3
    #post_form
      = render 'post_form'
    #post_filter
      = render 'post_filter'
    #post_list(style="overflow:auto;height:400px;")
      = render template: 'posts/index'

  .span6
    #map.map(style="width:100%;height:600px")
    
  .span3
    #user
